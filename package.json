{
	"name": "badge-viewer",
	"displayName": "Badge Viewer",
	"description": "A place to view your badges.",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.46.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:badge-viewer.view-badges"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "badge-viewer.view-badges",
				"title": "View Badges"
			}
		],
		"configuration": {
			"title": "Badge Viewer",
			"properties": {
				"badge-viewer.badge-links": {
					"type": "array",
					"description": "Copy and paste your badge name and links here. [\"name\", \"link\"]"
				}
			}
		},
		"keybindings": [
			{
				"command": "badge-viewer.view-badges",
				"key": "shift+v",
				"mac": "shift+v"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.46.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.26.0",
		"@typescript-eslint/eslint-plugin": "^2.26.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.1",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	}
}
